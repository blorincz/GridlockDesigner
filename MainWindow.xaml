<!-- MainWindow.xaml -->
<Window x:Class="GridlockDesigner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GridlockDesigner"
        Title="Gridlock Puzzle Designer" Height="800" Width="1000">
    <Window.Resources>
        <local:TextColorConverter x:Key="TextColorConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Tools -->
        <Border Grid.Column="0" Background="LightGray" Padding="10">
            <StackPanel>
                <TextBlock Text="Drag Vehicles to Board" FontWeight="Bold" Margin="0,0,0,10"/>

                <!-- Horizontal Car (2x1) -->
                <Border BorderBrush="Black" BorderThickness="1" Background="Cyan" 
                Margin="0,5" Width="60" Height="30" Cursor="Hand"
                MouseLeftButtonDown="VehicleButton_MouseLeftButtonDown" Tag="H,2">
                    <TextBlock Text="Car" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10"/>
                </Border>

                <!-- Vertical Car (1x2) -->
                <Border BorderBrush="Black" BorderThickness="1" Background="Cyan" 
                Margin="0,5" Width="30" Height="60" Cursor="Hand"
                MouseLeftButtonDown="VehicleButton_MouseLeftButtonDown" Tag="V,2">
                    <TextBlock Text="Car" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10"
                       RenderTransformOrigin="0.5,0.5">
                        <TextBlock.RenderTransform>
                            <RotateTransform Angle="90"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                </Border>

                <!-- Horizontal Truck (3x1) -->
                <Border BorderBrush="Black" BorderThickness="1" Background="Yellow" 
                Margin="0,5" Width="90" Height="30" Cursor="Hand"
                MouseLeftButtonDown="VehicleButton_MouseLeftButtonDown" Tag="H,3">
                    <TextBlock Text="Truck" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10"/>
                </Border>

                <!-- Vertical Truck (1x3) -->
                <Border BorderBrush="Black" BorderThickness="1" Background="Yellow" 
                Margin="0,5" Width="30" Height="90" Cursor="Hand"
                MouseLeftButtonDown="VehicleButton_MouseLeftButtonDown" Tag="V,3">
                    <TextBlock Text="Truck" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10"
                       RenderTransformOrigin="0.5,0.5">
                        <TextBlock.RenderTransform>
                            <RotateTransform Angle="90"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                </Border>

                <!-- Ambulance (2x1 with Red Cross) -->
                <Border BorderBrush="Black" BorderThickness="1" Background="White" 
                Margin="0,5" Width="60" Height="30" Cursor="Hand"
                MouseLeftButtonDown="VehicleButton_MouseLeftButtonDown" Tag="H,2,Ambulance">
                    <Grid>
                        <Rectangle Fill="Red" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Rectangle Fill="White" Width="16" Height="4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Rectangle Fill="White" Width="4" Height="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <Separator Margin="0,20,0,10"/>

                <Button x:Name="btnClear" Content="Clear Board" Height="30" Margin="0,5" Click="BtnClear_Click"/>
                <Button x:Name="btnSolve" Content="Solve Puzzle" Height="30" Margin="0,5" Click="BtnSolve_Click"/>

                <StackPanel Margin="0,20,0,0">
                    <TextBlock Text="Save/Load" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBox x:Name="txtPuzzleTitle" Text="Level 1" Margin="0,0,0,5"/>
                    <Button x:Name="btnSave" Content="Save Puzzle" Height="30" Margin="0,5" Click="BtnSave_Click"/>
                    <ComboBox x:Name="cmbSavedPuzzles" Height="30" Margin="0,5" SelectionChanged="CmbSavedPuzzles_SelectionChanged"/>
                    <Button x:Name="btnDelete" Content="Delete Puzzle" Height="30" Margin="0,5" Click="BtnDelete_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Center Panel - Game Board -->
        <Border Grid.Column="1" Background="#4B7C6C" Margin="20" BorderBrush="Black" BorderThickness="2">
            <Grid Width="480" Height="480">
                <!-- Game Board Cells -->
                <ItemsControl x:Name="BoardGrid">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="6" Columns="6" IsItemsHost="True"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="80" Height="80" 
                            BorderBrush="#CCCCCC" 
                            BorderThickness="1"
                            Background="{Binding Color}"
                            AllowDrop="True"
                            DragOver="BoardGrid_DragOver"
                            Drop="BoardGrid_Drop"
                            MouseLeftButtonDown="Cell_MouseLeftButtonDown">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsExit}" Value="True">
                                                <Setter Property="Background" Value="LightGreen"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <TextBlock Text="{Binding Content}" 
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Foreground="{Binding Color, Converter={StaticResource TextColorConverter}}"
                                            FontWeight="Bold"
                                            FontSize="10"
                                            TextWrapping="Wrap"
                                            TextAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RotateText}" Value="True">
                                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                                    <Setter Property="RenderTransform">
                                                        <Setter.Value>
                                                            <RotateTransform Angle="90"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>

        <!-- Right Panel - Solution -->
        <Border Grid.Column="2" Background="WhiteSmoke" Margin="10">
            <StackPanel>
                <TextBlock Text="Solution" FontWeight="Bold" Margin="0,0,0,10"/>
                <Border BorderBrush="LightGray" BorderThickness="1" Margin="0,0,0,10">
                    <ItemsControl x:Name="lstSolution" 
                  ScrollViewer.VerticalScrollBarVisibility="Disabled"
                  ItemsSource="{Binding}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Text}" 
                          Padding="5,2"
                          Background="Transparent">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Normal"/>
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="Background" Value="LightBlue"/>
                                                    <Setter Property="Foreground" Value="DarkBlue"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnPrev" Content="◀ Previous" Width="80" Margin="5" Click="BtnPrev_Click"/>
                    <Button x:Name="btnNext" Content="Next ▶" Width="80" Margin="5" Click="BtnNext_Click"/>
                </StackPanel>
                <Button x:Name="btnResetView" Content="Reset View" Height="30" Margin="0,10" Click="BtnResetView_Click"/>

                <TextBlock x:Name="txtSolutionInfo" Margin="0,20,0,0" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>